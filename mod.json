{
    "geode": "4.9.0",
    "gd": {
        "win": "2.2074",
        "android": "2.2074",
        "mac": "2.2074",
        "ios": "2.2074"
    },
    "id": "speedy.randomspeed",
    "name": "Random Speed Chaos",
    "version": "1.0.0",
    "developer": "speedy",
    "description": "Randomly changes game speed for chaotic fun! Customize speed ranges, change intervals, and more.",
    "settings": {
        "enabled": {
            "type": "bool",
            "name": "Enable Random Speed",
            "description": "Toggle the chaos on/off globally.",
            "default": true
        },
        "min-speed": {
            "type": "float",
            "name": "Minimum Speed",
            "description": "Slowest possible speed multiplier.",
            "default": 0.1,
            "min": 0.05,
            "max": 1.0,
            "controls": {
                "slider": true,
                "arrows": true,
                "arrow-step": 0.05
            }
        },
        "max-speed": {
            "type": "float",
            "name": "Maximum Speed",
            "description": "Fastest possible speed multiplier.",
            "default": 2.0,
            "min": 1.0,
            "max": 5.0,
            "controls": {
                "slider": true,
                "arrows": true,
                "arrow-step": 0.1
            }
        },
        "min-interval": {
            "type": "float",
            "name": "Min Change Interval",
            "description": "Minimum seconds before speed changes.",
            "default": 2.0,
            "min": 0.5,
            "max": 10.0,
            "controls": {
                "slider": true,
                "arrows": true,
                "arrow-step": 0.5
            }
        },
        "max-interval": {
            "type": "float",
            "name": "Max Change Interval",
            "description": "Maximum seconds before speed changes.",
            "default": 5.0,
            "min": 1.0,
            "max": 20.0,
            "controls": {
                "slider": true,
                "arrows": true,
                "arrow-step": 0.5
            }
        },
        "show-notifications": {
            "type": "bool",
            "name": "Show Speed Notifications",
            "description": "Display funny messages when speed changes.",
            "default": true
        },
        "only-in-level": {
            "type": "bool",
            "name": "Only Active in Levels",
            "description": "Disable random speed in menus (recommended!).",
            "default": true
        },
        "smooth-transition": {
            "type": "bool",
            "name": "Smooth Speed Transitions",
            "description": "Gradually change speed instead of instant changes.",
            "default": false
        },
        "transition-duration": {
            "type": "float",
            "name": "Transition Duration",
            "description": "How long smooth transitions take (seconds).",
            "default": 0.3,
            "min": 0.1,
            "max": 2.0,
            "controls": {
                "slider": true,
                "arrows": true,
                "arrow-step": 0.1
            }
        },
        "sync-music": {
            "type": "bool",
            "name": "Sync Music Pitch",
            "description": "Syncs the music and sound effects pitch with the game's speed.",
            "default": true
        }
    },
    "dependencies": {},
    "resources": {
        "sprites": []
    }
}
